<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs371m.dcd954.recordexpress">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SaveOption"
            android:label="Save Menu Option"
            android:screenOrientation="portrait"
            />
        <activity android:name=".EditOption"
            android:label="Edit Menu Option"
            android:screenOrientation="portrait"
            />
        <activity android:name=".RenameOption"
            android:label="Rename Menu Option"
            android:screenOrientation="portrait"
            />
        <activity android:name=".ExtendingOption"
            android:label="Extending Menu Option"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>